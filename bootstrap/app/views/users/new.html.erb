<div class="row">
	
	<div class="col-lg-4 col-md-4 col-xs-4 col-xs-offset-1">
		
<h1>Sign up!</h1>

<ul>
  <% @user.errors.full_messages.each do |err_msg| %>
    <li><%= err_msg %></li>
  <% end %>
</ul>

<form action="/user" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  
	<div class="form-group">
  <label for="user_username">Username</label>
  <input
    type="text"
    name="user[username]"
    id="user_username"
    value="<%= @user.username %>" 
		class="form-control" >
	</div>

	<div class="form-group">
  <label for="user_password">Password</label>
  <input type="password" name="user[password]" id="user_password" class="form-control" >
  <br>
	</div>

	<button type="submit" class="form-control btn btn-info">Sign Up</button>
</form>

	</div>
</div>